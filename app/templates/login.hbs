<div class='login'>
  <div class='lion-guardians-logo'>
    <img class='logo' src='assets/logo.png'>
  </div>
  <div class='login-form'>
    <form class='form-inline' {{action 'login' on='submit'}}>
      <div class='input-group'>
        <span class='input-group-addon'>Email:</span>
        {{input name='email' value=email class='form-control' placeholder='example@gmail.com'}}
      </div>
      <div class='input-group'>
        <span class='input-group-addon'>Password:</span>
        {{input name='password' value=password type='password' class='form-control' placeholder='Required'}}
      </div>
      <div class='login-button-wrapper'>
        <button {{action 'login'}} type='submit' class='btn btn-default login-button' {{bind-attr disabled=toriiSession.isWorking}}>
          {{#if toriiSession.isWorking}}
            Logging in...
          {{else}}
            Log In
          {{/if}}
        </button>
      </div>
    </form>

    {{#if error}}
      <div class="alert alert-danger">
        There was an error logging you in: {{error}}.
      </div>
    {{/if}}
  </div>
</div>
